{
  "manifest_version": 3,
  "name": "Linux.do 自动浏览",
  "version": "0.1.0",
  "description": "按 /latest 顺序自动浏览 linux.do 帖子，随机停留，支持断点续跑。",
  "permissions": ["storage", "notifications"],
  "host_permissions": ["https://linux.do/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://linux.do/*"],
      "js": ["logic.js", "content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Linux.do 自动浏览"
  }
}
